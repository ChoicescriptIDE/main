{
  "name": "CSIDE",
  "main": "main_process/main.js",
  "author": "CJW",
  "description": "Unofficial integrated development environment for ChoiceScript",
  "version": "1.4.0",
  "devDependencies": {
    "@types/mkdirp": "^1.0.2",
    "@types/node": "^17.0.32",
    "@types/node-fetch": "^2.5.7",
    "@types/node-static": "^0.7.7",
    "@typescript-eslint/eslint-plugin": "^5.36.1",
    "@typescript-eslint/parser": "^5.36.1",
    "electron": "20.0.0",
    "electron-builder": "^23.0.3",
    "eslint": "^8.23.0",
    "grunt": ">=1",
    "grunt-contrib-clean": "^1.0.0",
    "grunt-contrib-concat": "^1.0.1",
    "grunt-contrib-copy": "^1.0.0",
    "grunt-contrib-cssmin": "^3.0.0",
    "grunt-contrib-uglify": "^5.2.1",
    "grunt-eslint": "^24.0.0",
    "grunt-shell": "4.0.0",
    "load-grunt-tasks": "^3.5.0",
    "typescript": "^4.8.2",
    "asar": "^3.1.0"
  },
  "dependencies": {
    "@actions/core": "^1.9.1",
    "@actions/github": "^5.0.3",
    "axios": "^0.27.2",
    "cside-choicescript": "git+https://git@github.com/ChoicescriptIDE/choicescript.git",
    "dictionary-en": "^3.2.0",
    "dictionary-en-gb": "^2.4.0",
    "dropbox": "^10.34.0",
    "knockout": "3.2.0",
    "monaco-editor": "git+https://git@github.com/ChoicescriptIDE/monaco-editor.git#lib",
    "mousetrap": "^1.6.0",
    "node-static": "^0.7.11",
    "noty": "^3.2.0-beta"
  },
  "build": {
    "productName": "ChoiceScript IDE",
    "appId": "io.github.choicescriptide.cside",
    "executableName": "CSIDE",
    "includeSubNodeModules": true,
    "files": [
      {
        "from": "build",
        "to": ".",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64",
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "msi",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "directories": {
      "buildResources": "./source/img",
      "output": "./dist/${platform}"
    }
  },
  "scripts": {
    "start": "electron ./release/app.asar",
    "app:dir": "npx electron-builder --dir",
    "app:dist": "npx electron-builder",
    "tsc:test": "npm run test",
    "tsc:compile": "npx tsc -p .",
    "tsc:watch": "npx tsc -w",
    "tsc:workflows": "npx tsc actions/**/*.ts --skipLibCheck --outDir ./.github/actions/ --moduleResolution node"
  },
  "window": {
    "show": true,
    "title": "ChoiceScript IDE",
    "icon": "img/cside.png",
    "frame": false,
    "position": "center",
    "min_width": 900,
    "min_height": 600
  },
  "webkit": {
    "plugin": true
  },
  "webview": {
    "partitions": [
      {
        "name": "untrusted-game",
        "accessible_resources": [
          "run_index.html",
          "*.apng",
          "*.png",
          "*.jpg",
          "*.jpeg",
          "*.gif",
          "*.bmp",
          "*.svg",
          "*.wav",
          "*.ogg",
          "*.mp3",
          "lib/jquery/jquery-1.11.3.min.js",
          "node_modules/cside-choicescript/web/*.js",
          "node_modules/cside-choicescript/web/*.css",
          "mods/*.js",
          "js/cs_override.min.js"
        ]
      }
    ]
  },
  "chromium-args": "--allow-file-access-from-files"
}
